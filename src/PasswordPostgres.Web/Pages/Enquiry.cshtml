@page
@model PasswordPostgres.Web.Pages.EnquiryModel
@{
    ViewData["Subject"] = "Member Enquiry";
}

<h1>Make an Enquiry!</h1>

<p>This will send a real email via sendgrid</p>

<form method="post">
    <div class="row">
        <div class="col-12">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="EmailAddress"></label>
                @*<input asp-for="Email" class="form-control" placeholder="Enter email" />*@
                <input asp-for="EmailAddress" class="form-control" placeholder="Enter email" value="davemateer@mailinator.com" />
                <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
                <span asp-validation-for="EmailAddress" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Subject"></label>
                @*<input asp-for="Subject" class="form-control" placeholder="Provide a subject" />*@
                <input asp-for="Subject" class="form-control" placeholder="Provide a subject" value="Test subject" />
                <span asp-validation-for="Subject" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Message"></label>
                @*<textarea asp-for="Message" class="form-control" rows="3" placeholder="Your enquiry"></textarea>*@
                <textarea asp-for="Message" class="form-control" rows="3" placeholder="Your enquiry"></textarea>
                <span asp-validation-for="Message" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
        </div>
    </div>
</form>



@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
